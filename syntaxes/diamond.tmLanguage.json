{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "diamond",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#entities"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.block",
				"begin": "---",
				"end": "---" 
			}, {
				"name": "comment.line.diamond",
				"match": "--.*"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.diamond",
				"match": "\\b(if|else|return)\\b"
			}, {
				"name": "storage.type.diamond",
				"match": "\\bfunction\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.diamond",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.diamond",
					"match": "\\\\."
				}
			]
		},
		"constants": {
			"name": "constant.diamond",
			"patterns": [{
				"name": "constant.numeric.diamond",
				"match": "\\b([0-9]*[.])?[0-9]+\\b"
			}]
		},
		"entities": {
			"name": "entity.diamond",
			"patterns": [{
				"name": "entity.name.function",
				"match": "(?<=function\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
			}]
		}
	},
	"scopeName": "source.diamond"
}